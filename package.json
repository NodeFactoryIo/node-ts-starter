{
  "name": "nodejs-ts-starter",
  "description": "Starter project for developing with NodeJs (Typescript) as backend server",
  "version": "1.0.0",
  "contributors": [
    "Marin Petrunić <marin@nodefactory.io>",
    "Belma gutlić <belma@nodefactory.io"
  ],
  "license": "MIT",
  "scripts": {
    "init": "mkdir dist",
    "clean": "rm -rf dist",
    "revert": "npm run compile && sequelize --config sequelizecli.js db:migrate:undo",
    "revert-all": "npm run compile && sequelize --config sequelizecli.js db:migrate:undo:all",
    "migrate": "npm run compile && sequelize --config sequelizecli.js db:migrate",
    "prebuild": "yarn run clean && npm run init",
    "build": "tsc --incremental --sourceMap --outDir dist",
    "compile": "tsc",
    "pretest": "npm run compile && npm run lint",
    "test:unit": "NODE_ENV=test mocha -r dotenv/config -r ts-node/register \"test/unit/**/*.ts\"",
    "test": "yarn run test:unit & yarn run test:e2e",
    "test:e2e": "SERVER_PORT=0 mocha --timeout 30000 -r ts-node/register -r dotenv/config \"test/e2e/**/*.ts\"",
    "coverage": "nyc --reporter=text --all --include \"src/**/*.js\" npm test",
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "tslint src/**/*.ts",
    "start": "node --inspect=0.0.0.0:56745 -r ts-node/register -r dotenv/config src/index.ts",
    "dev": "./node_modules/nodemon/bin/nodemon.js",
    "task": "ts-node ./tasksfile.ts"
  },
  "dependencies": {
    "@hapi/joi": "^15.1.0",
    "body-parser": "1.19.0",
    "express": "4.17.1",
    "express-async-errors": "3.1.1",
    "express-validation": "^1.0.2",
    "helmet": "^3.18.0",
    "joi": "^13.5.2",
    "morgan": "^1.9.1",
    "nodemon": "^1.17.4",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "sequelize": "^5.12.2",
    "umzug": "^2.2.0",
    "winston": "^3.0.0",
    "node-cleanup": "^2.1.2"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/express": "4.17.0",
    "@types/node": "^12.0.12",
    "@types/supertest": "^2.0.5",
    "@types/sinon": "^7.0.13",
    "@types/mocha": "^5.2.7",
    "coveralls": "^3.0.2",
    "dotenv": "^5.0.1",
    "nyc": "^12.0.2",
    "runjs": "^4.3.2",
    "sequelize-cli": "^5.5.0",
    "supertest": "^3.1.0",
    "tap-spec": "^5.0.0",
    "tslint": "^5.18.0",
    "typescript": "3.5.2",
    "typescript-eslint-parser": "^18.0.0",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "sinon": "^7.3.2",
    "tasksfile": "^5.1.0",
    "ts-node": "^8.3.0"
  }
}
